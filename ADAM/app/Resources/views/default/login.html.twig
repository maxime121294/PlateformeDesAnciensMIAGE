{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<ul id="login-dp" class="dropdown-menu">
    <li>
        <div class="row">
            <div class="col-md-12">
                Se connecter via
                <div class="social-buttons">
                    <a href="{{ path('hwi_oauth_service_redirect', {'service':'facebook'}) }}" class="social-btn"><img src="{{ asset('bundles/front/images/facebook-icon.png') }}" alt="Facebook" /></a>
                    <a href="{{ path('hwi_oauth_service_redirect', {'service':'google'}) }}" class="social-btn"><img src="{{ asset('bundles/front/images/google-icon.png') }}" alt="Google" /></a>
                    <a href="{{ path('hwi_oauth_service_redirect', {'service':'linkedin'}) }}" class="social-btn"><img src="{{ asset('bundles/front/images/linkedin-icon.png') }}" alt="Linkedin" /></i></a>
                </div>
                 <form action="{{ path("fos_user_security_check") }}" method="post" class="form" role="form" accept-charset="UTF-8" id="login-nav">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                         <label for="username">{{ 'security.login.username'|trans }}</label>
                         <input type="email" id="username exampleInputEmail2" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Adresse email" required>
                    </div>
                    <div class="form-group">
                         <label for="password">{{ 'security.login.password'|trans }}</label>
                         <input type="password" id="password exampleInputPassword2" name="_password" required="required"  class="form-control" placeholder="Mot de passe" required>
                         <div class="help-block text-right"><a href="{{ path('fos_user_resetting_request') }}" class="help-link">Mot de passe oubli√© ?</a></div>
                    </div>
                    <div class="form-group">
                         <button type="submit" class="btn btn-primary btn-block">Connexion</button>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                 </form>
            </div>
            <div class="bottom text-center">
                Pas encore inscrit ? <a href="{{ path('fos_user_registration_register') }}" class="help-link"><b>Rejoignez-nous</b></a>
            </div>
        </div>
    </li>
</ul>
