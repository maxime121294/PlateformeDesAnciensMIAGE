{% extends 'base.html.twig' %}

{% block body %}
<div class="form-advert">
    <h1>Poster une annonce</h1>

    {{ form_start(form, {'attr': {'id': 'form_advert_new'}}) }}
            <div class="form-group row">
                {{ form_label(form.title, null, { 'label_attr': {'class': 'col-sm-3 form-control-label'}}) }}
                <div class="col-sm-9">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>
                
            </div>
            <div class="form-group row">
                {{ form_label(form.category, null, { 'label_attr': {'class': 'col-sm-3 form-control-label'}}) }}
                <div class="col-sm-9">
                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.category) }}
                </div>  
            </div>
             <div class="form-group row hidden" id="form-evenementDate">
                {{ form_label(form.evenementDate, null, { 'label_attr': {'class': 'col-sm-3 form-control-label'}}) }}
                <div class="col-sm-9 input-group date" id="evenDate">
                    <div class="col-sm-12">
                        {{ form_widget(form.evenementDate, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    {{ form_errors(form.evenementDate) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 input-group date" id="contentsAdvert">
                    <div class="col-sm-12">
                        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.content) }}
                </div>
            </div>
        <center><input type="submit" value="Poster l'annonce" class="btn btn-lg" /></center>
    {{ form_end(form) }}
    <a href="{{ path('annonce_index') }}" class="btn btn-danger" role="button">Retour</a>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/front/css/libs/bootstrap-datetimepicker.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{asset('bundles/front/js/libs/moment-with-locales.js')}}"></script>
    <script type="text/javascript" src="{{asset('bundles/front/js/libs/bootstrap-datetimepicker.js')}}"></script>

    <script>
    $(document).ready( function() {
        EvenCategory();
        var form = document.getElementById('form_advert_new'); // form has to have ID: <form id="formID">
            form.noValidate = true;
            form.addEventListener('submit', function(event) { // listen for form submitting
                    if (!event.target.checkValidity()) {
                        event.preventDefault(); // dismiss the default functionality
                        alert('Merci de remplir tout les champs du formulaire'); // error message
                    }
            }, false);
        $('#advert_category').change(function() {
            EvenCategory();
        });

        $('#evenDate').datetimepicker({
            locale: 'fr',
             minDate:moment()
        });
    });

    function EvenCategory() {
        if ($('#advert_category option:selected').text() === 'Événements'){
            $('#form-evenementDate').removeClass("hidden");
        }
        else{
            $('#form-evenementDate').addClass("hidden");
        }
    }
    </script>
{% endblock %}
