{% extends 'base.html.twig' %}

{% block body %}
<section class="pageAdvertList">
    <h1>Résultat de la recherche {% if search is defined %} "{{ search }}" {% endif %}</h1>

    {% if not app.user  %}
        {% block javascripts %}
            <script type="text/javascript">
                $('#myModal').modal({
                    backdrop: "static",
                    keyboard: false
                }); 
            </script>
        {% endblock %}
        {% include 'AppBundle:advert:popinIndex.html.twig' %}
    {% endif %}

     <div align="center">
        <div class="row">
            {{ form_start(filter_form, {'action': path('advert_filter')}) }}
                {{ form_widget(filter_form) }}
                {{ form_errors(filter_form) }}
                <input type="submit" value="Filtrer" class="btn btn-default" />
            {{ form_end(filter_form) }}
         </div>
    </div>

     {% for advert in adverts %}
        <br>
         <div class="container">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-9">
                    <div id="postlist">
                        <div class="panel">
                            <div class="panel-heading">
                                <div class="text-center">
                                    <div class="row">
                                        <div class="col-sm-9">
                                            <h3 class="pull-left">{{ advert.title }}</h3>
                                        </div>
                                        <div class="col-sm-3">
                                            <h4 class="pull-right">
                                            <small>{{ advert.author.firstname }} {{ advert.author.lastname }}</small><br>
                                            <small>Modifié le <em> {% if advert.updatedAt %}{{ advert.updatedAt|localizeddate('full', 'none') }}{% endif %} </em></small>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED')  %}
                            <div class="panel-body">
                                {{ advert.content|raw  }}
                            </div>
                        {% endif %}

                            <div class="panel-footer">
                                <div class="text-center">
                                    <div class="row">
                                        <div class="col-sm-9">
                                            <span class="label label-default pull-left">{{ advert.category }}</span>
                                        </div>
                                        {% if advert.author == app.user or is_granted("ROLE_ADMIN") %}
                                            <div class="col-sm-3">
                                                <h5 class="pull-right">
                                                    <a type="button" href="{{ path('annonce_edit', { 'id': advert.id }) }}" class="btn btn-warning btn-circle"><i class="glyphicon glyphicon-pencil"></i></a>
                                                    <a type="button" href="{{ path('advert_remove', {'id': advert.id}) }}" class="btn btn-danger btn-circle"><i class="glyphicon glyphicon-remove"></i></a>
                                                </h5>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
     
    <div class="navigation pull-right">
        {% if pagination is defined %} {{ knp_pagination_render(pagination) }} {% endif %}
    </div>
</section>
{% endblock %}