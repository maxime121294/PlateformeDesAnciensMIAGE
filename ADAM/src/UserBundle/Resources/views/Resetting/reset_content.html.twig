{% trans_default_domain 'FOSUserBundle' %}

<div class="modif-password-form">
    <h3 class="modif-password-title"> Modifier le mot de passe </h3>
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset form-group row' } }) }}
        {{ form_widget(form) }}
        <div class="submit-container">
            <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn-submit"/>
        </div>
    {{ form_end(form) }}
    </div>
</div>
